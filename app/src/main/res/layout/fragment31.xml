<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/h_back" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/h_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_notepad" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/h_back"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_line"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:background="@color/background_white" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user_line"
                android:text="@string/app_name"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/user_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/user_line"
                android:text="请登录"
                android:textColor="#000"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:baselineAlignBottom="true"
            android:drawableLeft="@drawable/ic_user_info"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="个人资料"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/btn_changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:baselineAlignBottom="true"
            android:drawableLeft="@drawable/ic_change_pass"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="修改密码"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:baselineAlignBottom="true"
            android:drawableLeft="@drawable/ic_autor"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="关于作者"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:baselineAlignBottom="true"
            android:drawableLeft="@drawable/ic_user_feedback"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="意见反馈"
            android:textColor="#000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:baselineAlignBottom="true"
            android:drawableLeft="@drawable/ic_exit"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="退出"
            android:textColor="#000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>